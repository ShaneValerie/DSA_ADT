#include <stdio.h>
#include <stdbool.h>

#define SIZE 10
#define EMPTY -1
#define DELETED -2

typedef int Dictionary[SIZE];

void init(Dictionary D)
{
    int i;
    for(i = 0; i < SIZE; i++)
        D[i] = EMPTY;
}

int hash(int key)
{
    return key % SIZE;
}

void insert(Dictionary D, int key)
{
    int idx = hash(key);
    int start = idx;

    while(D[idx] != EMPTY && D[idx] != DELETED) {
        if(D[idx] == key)
            return;
        idx = (idx + 1) % SIZE;
        if(idx == start)
            return;
    }
    D[idx] = key;
}

void removeKey(Dictionary D, int key)
{
    int idx = hash(key);
    int start = idx;

    while(D[idx] != EMPTY) {
        if(D[idx] == key) {
            D[idx] = DELETED;
            return;
        }
        idx = (idx + 1) % SIZE;
        if(idx == start)
            break;
    }
}

bool isMember(Dictionary D, int key)
{
    int idx = hash(key);
    int start = idx;

    while(D[idx] != EMPTY) {
        if(D[idx] == key)
            return true;
        idx = (idx + 1) % SIZE;
        if(idx == start)
            break;
    }
    return false;
}

void display(Dictionary D)
{
    int i;
    for(i = 0; i < SIZE; i++) {
        printf("[%d] ", i);
        if(D[i] == EMPTY)
            printf("EMPTY\n");
        else if(D[i] == DELETED)
            printf("DELETED\n");
        else
            printf("%d\n", D[i]);
    }
}

int main()
{
    Dictionary D;

    init(D);

    insert(D, 12);
    insert(D, 22);
    insert(D, 32);
    insert(D, 42);

    display(D);

    removeKey(D, 22);

    printf("\n");
    display(D);

    printf("\nIs 22 a member? %d\n", isMember(D, 22));

    return 0;
}
